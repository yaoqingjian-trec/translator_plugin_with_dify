{
  "manifest_version": 3,
  "name": "智能翻译选择器",
  "version": "1.0.0",
  "description": "类似影刀RPA的元素选择和翻译工具，支持硅基流动和Dify API",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "tabs"
  ],
  
  "host_permissions": [
    "https://api.siliconflow.cn/*",
    "https://api.dify.ai/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/constants.js",
        "utils/i18n.js",
        "utils/storage.js",
        "content/ui-overlay.js",
        "content/element-selector.js",
        "content/translator.js",
        "content/content.js"
      ],
      "css": [
        "assets/css/content.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  
  "commands": {
    "toggle-selector": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "切换元素选择器"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/css/content.css",
        "assets/icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 